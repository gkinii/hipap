<mujoco model="workspace_scene">
    <option timestep="0.002" integrator="RK4"/>
    
    <asset>
        <!-- Grid floor texture (keeping as original) -->
        <texture name="grid" type="2d" builtin="checker"
            rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
            width="512" height="512" mark="edge" markrgb="0.8 0.8 0.8"/>
        <!-- Grid floor material (keeping as original) -->
        <material name="grid" texture="grid" texrepeat="40 40" 
            rgba="1.0 1.0 1.0 1.0" specular="0.2" shininess="0.5"/>
        
        <!-- Wall material - Gray -->
        <material name="walls" rgba="0.6 0.6 0.6 1.0" specular="0.3" shininess="0.6"/>
        
        <!-- Static objects material - Gray -->
        <material name="static_objects" rgba="0.5 0.5 0.5 1.0" specular="0.2" shininess="0.4"/>
        
        <!-- Mobile Robot materials - Black theme -->
        <material name="mobile_robot_body" rgba="0.15 0.15 0.15 1.0" specular="0.4" shininess="0.8"/>
        <material name="mobile_robot_wheel" rgba="0.1 0.1 0.1 1.0" specular="0.2" shininess="0.3"/>
        <material name="mobile_robot_sensor" rgba="0.2 0.2 0.2 1.0" specular="0.5" shininess="0.9"/>
        
        <!-- AGV materials - Black theme -->
        <material name="agv_body" rgba="0.18 0.18 0.18 1.0" specular="0.4" shininess="0.8"/>
        <material name="agv_wheel" rgba="0.08 0.08 0.08 1.0" specular="0.2" shininess="0.3"/>
        <material name="agv_cargo" rgba="0.22 0.22 0.22 1.0" specular="0.5" shininess="0.9"/>
        
        <!-- Human material - Black -->
        <material name="human_body" rgba="0.12 0.12 0.12 1.0" specular="0.1" shininess="0.2"/>
    </asset>
    
    <worldbody>
        <!-- Lighting -->
        <light directional="true" ambient="0.4 0.4 0.4" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3"
            pos="0 0 20" dir="0 0 -1"/>
        
        <!-- Grid floor (unchanged) -->
        <geom name="floor" type="plane" size="50 50 0.1" material="grid" pos="0 0 0"/>
        
        <!-- Workspace in center - 10.5 x 10.5 x 7 meters (no roof) -->
        <body name="workspace" pos="0 0 0">
            <!-- Walls - Gray -->
            <geom name="workspace_wall_south" type="box" size="5.25 0.1 5"
                material="walls" pos="0 -3.6 5"/>
            <geom name="workspace_wall_east" type="box" size="0.1 3.5 5"
                material="walls" pos="5.35 0 5"/>
            <geom name="workspace_wall_west" type="box" size="0.1 3.5 5"
                material="walls" pos="-5.35 0 5"/>
            
            <!-- Static objects - Black -->
            <geom name="workspace_desks" type="box" size="1.25 3.5 1.5"
                material="static_objects" pos="4.1 0 1.5"/>
            <geom name="battery_assembly" type="box" size="0.6 0.25 0.7"
                material="static_objects" pos="0.25 -0.6 0.7"/>
            <geom name="tool_station" type="box" size="0.5 0.25 0.5"
                material="static_objects" pos="0.25 1.45 0.5"/>


            
            <site name="battery_c0" pos="-0.35 -0.85 0.0" size="0.05" rgba="1 0 0 1"/>
            <site name="battery_c1" pos="-0.35 -0.35 0.0" size="0.05" rgba="1 0 0 1"/>
            <site name="battery_c2" pos=" 0.85 -0.35 0.0" size="0.05" rgba="1 0 0 1"/>
            <site name="battery_c3" pos=" 0.85 -0.85 0.0" size="0.05" rgba="1 0 0 1"/>

            <site name="tool_c0" pos="-0.25  1.2 0.0" size="0.05" rgba="1 0 0 1"/>
            <site name="tool_c1" pos="-0.25  1.7 0.0" size="0.05" rgba="1 0 0 1"/>
            <site name="tool_c2" pos=" 0.75  1.7 0.0" size="0.05" rgba="1 0 0 1"/>
            <site name="tool_c3" pos=" 0.75  1.2 0.0" size="0.05" rgba="1 0 0 1"/>
            
            <site name="outline_c0" pos="5.35  3.5 0.0" size="0.05" rgba="1 0 0 1"/>
            <site name="outline_c1" pos="2.85  3.5 0.0" size="0.05" rgba="1 0 0 1"/>
            <site name="outline_c2" pos="2.85 -3.5 0.0" size="0.05" rgba="1 0 0 1"/>
            <site name="outline_c4" pos="-5.25 -3.5 0" size="0.05" rgba="1 0 0 1"/>
            <site name="outline_c5" pos="-5.25  9 0" size="0.05" rgba="1 0 0 1"/>
            <site name="outline_c6" pos="5.35  9 0.0" size="0.05" rgba="1 0 0 1"/>

        </body>
        
        <body name="mobile_robot" pos="0.25 -1.8 0.6">
            <freejoint name="robot_base_joint"/>
            <geom name="robot_chassis" type="box" size="0.875 0.4455 0.6" 
                material="mobile_robot_body" mass="50.0"/>
            <body name="front_left_wheel" pos="0.7 0.35 -0.45">
                <geom name="front_left_wheel_geom" type="cylinder" size="0.15 0.05" 
                    material="mobile_robot_wheel" mass="3.0" friction="1.2 0.1 0.01"/>
            </body>
            <body name="front_right_wheel" pos="0.7 -0.35 -0.45">
                <geom name="front_right_wheel_geom" type="cylinder" size="0.15 0.05" 
                    material="mobile_robot_wheel" mass="3.0" friction="1.2 0.1 0.01"/>
            </body>
            <body name="rear_left_wheel" pos="-0.7 0.35 -0.45">
                <geom name="rear_left_wheel_geom" type="cylinder" size="0.15 0.05" 
                    material="mobile_robot_wheel" mass="3.0" friction="1.2 0.1 0.01"/>
            </body>
            <body name="rear_right_wheel" pos="-0.7 -0.35 -0.45">
                <geom name="rear_right_wheel_geom" type="cylinder" size="0.15 0.05" 
                    material="mobile_robot_wheel" mass="3.0" friction="1.2 0.1 0.01"/>
            </body>
            <site name="robot_center" pos="0 0 0" size="0.02" rgba="1 1 0 1"/>

            <site name="robot_c0" pos="-0.875 -0.4455 -0.6" size="0.03" rgba="1 0 0 1"/>
            <site name="robot_c1" pos="-0.875  0.4455 -0.6" size="0.03" rgba="1 0 0 1"/>
            <site name="robot_c2" pos=" 0.875  0.4455 -0.6" size="0.03" rgba="1 0 0 1"/>
            <site name="robot_c3" pos=" 0.875 -0.4455 -0.6" size="0.03" rgba="1 0 0 1"/>
            
        </body>
        

        <body name="agv" pos="-4 6 0.25">
            <freejoint name="agv_base_joint"/>
            <geom name="agv_chassis" type="box" size="0.875 1.5 0.25" 
                material="agv_body" mass="80.0"/>
            <body name="agv_front_left_wheel" pos="0.7 1.2 -0.15">
                <geom name="agv_front_left_wheel_geom" type="cylinder" size="0.1 0.04" 
                    material="agv_wheel" mass="2.5" friction="1.0 0.1 0.01"/>
            </body>
            <body name="agv_front_right_wheel" pos="0.7 -1.2 -0.15">
                <geom name="agv_front_right_wheel_geom" type="cylinder" size="0.1 0.04" 
                    material="agv_wheel" mass="2.5" friction="1.0 0.1 0.01"/>
            </body>
            <body name="agv_rear_left_wheel" pos="-0.7 1.2 -0.15">
                <geom name="agv_rear_left_wheel_geom" type="cylinder" size="0.1 0.04" 
                    material="agv_wheel" mass="2.5" friction="1.0 0.1 0.01"/>
            </body>
            <body name="agv_rear_right_wheel" pos="-0.7 -1.2 -0.15">
                <geom name="agv_rear_right_wheel_geom" type="cylinder" size="0.1 0.04" 
                    material="agv_wheel" mass="2.5" friction="1.0 0.1 0.01"/>
            </body>
            <geom name="agv_cargo_area" type="box" size="0.7 1.3 0.05" 
                material="agv_cargo" pos="0 0 0.3"/>

            <site name="agv_c0" pos="-0.875 -1.5 -0.25" size="0.03" rgba="1 0 0 1"/>
            <site name="agv_c1" pos="-0.875  1.5 -0.25" size="0.03" rgba="1 0 0 1"/>
            <site name="agv_c2" pos=" 0.875  1.5 -0.25" size="0.03" rgba="1 0 0 1"/>
            <site name="agv_c3" pos=" 0.875 -1.5 -0.25" size="0.03" rgba="1 0 0 1"/>

        </body>
        
    </worldbody>
    
    <include file="../humanoid/humanoid.xml" />
    
    <visual>
    
        <headlight ambient="0.3 0.3 0.3" diffuse="0.7 0.7 0.7"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="120" elevation="-20"/>
    </visual>
</mujoco>